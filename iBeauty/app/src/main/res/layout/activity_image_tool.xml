<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fitsSystemWindows="true"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

	</android.support.design.widget.AppBarLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#607D8B"
			android:gravity="center">

			<ImageView
				android:id="@+id/image_preview"
				android:src="@drawable/ic_img_preview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scaleType="centerInside"/>

		</LinearLayout>

		<com.github.clans.fab.FloatingActionMenu
			android:id="@+id/fab_menu"
			android:layout_gravity="bottom|right"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:menu_fab_size="mini"
			app:menu_backgroundColor="#ccffffff"
			android:paddingRight="16dp"
			android:paddingBottom="16dp">

			<com.github.clans.fab.FloatingActionButton
				android:id="@+id/fab_choose_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_choose_image"
				app:fab_size="mini"
				app:fab_label="选择图片"/>

			<com.github.clans.fab.FloatingActionButton
				android:id="@+id/fab_change_color"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_change_color"
				app:fab_size="mini"
				app:fab_label="修改颜色"/>

			<com.github.clans.fab.FloatingActionButton
				android:id="@+id/fab_change_size"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_change_size"
				app:fab_size="mini"
				app:fab_label="修改尺寸"/>
			<com.github.clans.fab.FloatingActionButton
				android:id="@+id/fab_save_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_save_white"
				app:fab_size="mini"
				app:fab_label="保存图片"/>

		</com.github.clans.fab.FloatingActionMenu>

	</FrameLayout>

</LinearLayout>

